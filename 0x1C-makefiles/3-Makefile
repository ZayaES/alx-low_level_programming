CC=gcc
SRC=main.c school.c
OBJ=main.o school.o
NAME=school
RM=rm -f

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c
	$(CC) 	-c -o main.o main.c

school.o: school.c
	$(CC) 	-c -o school.o school.c

re: $(SRC)
	$(RM) $(OBJ)
	$(CC) 	-c -o main.o main.c
	$(CC) 	-c -o school.o school.c
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)

