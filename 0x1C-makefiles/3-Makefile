CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm -f

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

re: $(SRC)
	$(RM) $(OBJ)
	$(CC) 	-c -o main.o main.c
	$(CC) 	-c -o school.o school.c
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)

