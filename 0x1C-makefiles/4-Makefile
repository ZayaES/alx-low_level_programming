CC=gcc
SRC=main.c school.c
OBJ=main.o school.o
NAME=school
RM=rm -f
CFLAG=-Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: m.h  main.c
	$(CC) $(CFLAG) 	-c -o main.o main.c

school.o: school.c
	$(CC) $(CFLAG)	-c -o school.o school.c

re: $(SRC)
	$(RM) $(OBJ)
	$(CC) $(CFLAG)	-c -o main.o main.c
	$(CC) $(CFLAG)	-c -o school.o school.c
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)

